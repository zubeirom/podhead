<div class="ui computer only tablet only grid">
  <div class="ui top fixed borderless huge menu">
    <div class="ui container">
      <a href="/" class="header item header-logo">
        <img src="/images/logo.png" alt="logo" class="logo">
        PodHead
      </a>
      <div class="item"></div>
      <div class="item">
        <div class="ui icon input ">
          <input type="text" placeholder="Enter episode or channel" class="main-input">
          <i class="search icon"></i>
        </div>
      </div>
      <div class="right menu">
        {{#if session.isAuthenticated}}
          <div class="item">
            <i class="user icon"></i>
          </div>
        {{else}}
          <div class="item">
            <a class="ui tiny secondary inverted button login" onclick="showLogin()">
              Login
            </a>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div class="ui mobile only grid">
  <div class="ui tiny borderless top fixed menu">
    <a class="header item" href="/">
      <img src="/images/logo.png" alt="logo" class="logo">
    </a>
    <div class="item">
      <div class="ui icon input ">
        <input type="text" placeholder="Enter episode..." class="main-input">
        <i class="search icon"></i>
      </div>
    </div>
    <div class="right menu">
      {{#if session.isAuthenticated}}
        <a href="" class="item">
          <i class="user icon"></i>
        </a>
      {{else}}
        <a class="item" onclick="showLogin()">
          Login
        </a>
      {{/if}}
    </div>
  </div>
</div>

<div class="ui container" id="main-container">
  <div class="ui computer only tablet only grid">
    <br>
    <br>
    <br>
  </div>
  <br>
  <br>
  <br>
  {{outlet}}
</div>

<div class="ui mini modal">
  <div class="header poppins">Log In To Podhead</div>
  <div class="content">
    <div class="ui form">
      <div class="field">
        <div class="ui icon input">
          <Input type="text" placeholder="you@domain.com" class="ui input" @value={{this.loginEmail}} />
          <i class="envelope outline icon"></i>
        </div>
      </div>
    </div>
    <br>
    Don't have an account? <a href="mailto:zubeir.mohamed@outlook.de">Sign Up</a>
  </div>
  <div class="actions">
    <div class="ui approve black poppins button">
      Continue
    </div>
  </div>
</div>

<script >
  function showLogin() {
    $(".ui.mini.modal").modal('show');
  }
</script>
